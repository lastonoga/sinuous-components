{
  "name": "sinuous-components",
  "repository": "lastonoga/sinuous-components",
  "version": "0.0.2",
  "description": "",
  "main": "dist/index.js",
  "alias": {
    "~": "~/.."
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "browser": {
    "fs": false,
    "child_process": false
  },
  "bugs": {
    "url": "https://github.com/lastonoga/sinuous-components/issues"
  },
  "homepage": "https://github.com/lastonoga/sinuous-components#readme",
  "author": "Kirill Burkhanov <me@burkhanov.com> (https://burkhanov.com)",
  "license": "ISC",
  "scripts": {
    "packages:watch": "yarn clear && lerna run --parallel start",
    "watch": "cross-env NODE_ENV=development webpack --config config/webpack.dev.js ",
    "build": "cross-env NODE_ENV=development webpack --config config/webpack.prod.js",
    "packages:build": "cross-env NODE_ENV=development webpack --config config/webpack.package.js",
    "clear": "rm -rf ./packages/*/dist"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/types": "^7.9.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "first-input-delay": "^0.1.3",
    "html-webpack-plugin": "^4.3.0",
    "lerna": "^3.20.2",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "sinuous": "^0.27.2"
  }
}
